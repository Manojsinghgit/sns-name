# Network: 'testnet' or 'mainnet'
NETWORK=testnet

# Solana RPC URLs (optional - defaults provided)
TESTNET_RPC_URL=https://api.testnet.solana.com
MAINNET_RPC_URL=https://api.mainnet-beta.solana.com

# Tron Network Configuration
# Use 'testnet' for Shasta testnet or 'mainnet' for Tron mainnet
# If not set, will use NETWORK value
TRON_NETWORK=testnet

# Tron RPC URLs (optional - defaults provided)
TRON_TESTNET_RPC_URL=https://api.shasta.trongrid.io
TRON_MAINNET_RPC_URL=https://api.trongrid.io

# Tron API Key (optional - for higher rate limits)
# Get free API key from: https://www.trongrid.io/
TRON_API_KEY=

# Server Port
PORT=3000

# For mainnet, you can use:
# - https://api.mainnet-beta.solana.com (public, rate limited)
# - Your own RPC provider URL (recommended for production)

